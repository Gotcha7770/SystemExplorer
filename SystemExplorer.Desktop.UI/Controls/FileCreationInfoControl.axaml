<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" MaxWidth="350" Height="20"	 
             x:Class="SystemExplorer.Desktop.UI.Controls.FileCreationInfoControl"
			 >
	<Border>
		<StackPanel Orientation="Horizontal">
			<TextBox Text="{Binding NewFileNameInput, Mode=TwoWay}"
					 Width="200"
					 VerticalAlignment="Stretch" 
					 HorizontalAlignment="Stretch"/>
			<ComboBox ItemsSource="{Binding FileExtensions}"
					  SelectedItem="{Binding SelectedExtension}"
					  VerticalAlignment="Stretch"
					  HorizontalAlignment="Right"
					  Width="100">
			</ComboBox>
			<Button CornerRadius="10"
					Width="20"
					Height="20"
					Content="V"
					Background="#51C815"
					Command="{Binding CreateFileCommand}"
					CommandParameter="{Binding FilePath}"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Center"
					Padding="2 0 0 0"
					Margin="5 0 5 0"
					FontSize="5"/>
		</StackPanel>
	</Border>
</UserControl>
