<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:SystemExplorer.Core.Shared.ViewModels"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SystemExplorer.Desktop.UI.Controls.DirectoryTabItemView"
			 x:DataType="vm:DirectoryTabItemViewModel"
			 x:CompileBindings="True">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="250"/>
		</Grid.RowDefinitions>
		
		<TextBox Text="{Binding FilePath}"/>
		
		<ListBox Grid.Row="1"
				 ItemsPanel="{Binding Directories}"
				 SelectedItem="{Binding SelectedFile}">
			<Interaction.Behaviors>
				<EventTriggerBehavior EventName="DoubleTapped">
					<InvokeCommandAction Command="{Binding OpenCommand}"
										 CommandParameter="{Binding SelectedFile}"/>
				</EventTriggerBehavior>
			</Interaction.Behaviors>
			
			<ListBox.ItemTemplate>
				<DataTemplate DataType="{x:Type vm:DirectoryTabItemViewModel} ">
					<Grid Background="Transparent">
						<TextBlock Text="{Binding Name}"/>
					</Grid>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
